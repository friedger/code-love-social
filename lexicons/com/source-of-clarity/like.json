{
  "lexicon": 1,
  "id": "com.source-of-clarity.like",
  "defs": {
    "main": {
      "type": "record",
      "description": "A like on a comment",
      "key": "tid",
      "record": {
        "type": "object",
        "required": ["subject", "createdAt"],
        "properties": {
          "subject": {
            "type": "ref",
            "ref": "com.atproto.repo.strongRef",
            "description": "Reference to the comment being liked (uri + cid)"
          },
          "createdAt": {
            "type": "string",
            "format": "datetime",
            "description": "ISO 8601 timestamp"
          }
        }
      }
    }
  }
}
