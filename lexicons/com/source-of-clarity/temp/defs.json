{
  "lexicon": 1,
  "id": "com.source-of-clarity.temp.defs",
  "defs": {
    "contractRef": {
      "type": "object",
      "description": "Reference to a Clarity smart contract on the Stacks blockchain",
      "required": ["principal", "contractName"],
      "properties": {
        "principal": {
          "type": "string",
          "description": "The Stacks address that deployed the contract"
        },
        "contractName": {
          "type": "string",
          "description": "The name of the contract",
          "maxLength": 128
        },
        "txId": {
          "type": "string",
          "description": "Transaction ID of the contract deployment (optional for comments on undeployed contracts)"
        }
      }
    },
    "lineRange": {
      "type": "object",
      "description": "A range of lines in contract source code",
      "required": ["start", "end"],
      "properties": {
        "start": {
          "type": "integer",
          "minimum": 1,
          "description": "Starting line number (inclusive, 1-based)"
        },
        "end": {
          "type": "integer",
          "minimum": 1,
          "description": "Ending line number (inclusive, 1-based)"
        }
      }
    },
    "replyRef": {
      "type": "object",
      "description": "Reference for threaded comment replies",
      "required": ["root", "parent"],
      "properties": {
        "root": {
          "type": "ref",
          "ref": "com.atproto.repo.strongRef",
          "description": "Reference to the root comment of the thread"
        },
        "parent": {
          "type": "ref",
          "ref": "com.atproto.repo.strongRef",
          "description": "Reference to the immediate parent comment"
        }
      }
    }
  }
}
